{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core"],
      "@shared/*": ["src/app/shared"],
      "@layout/*": ["/src/app/layout"],
      "@scss/*": ["/src/app/src/assets/scss"],
      "@environments/*": ["src/environments/*"],
      "@i18n": ["src/i18n/en-US/index.ts"]
    }
  }
}
